<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/place_photo"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/place_details_header_image_description"
        android:scaleType="centerCrop"
        android:src="@drawable/temp_pic" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/place_photo"
        android:background="@color/first" />

    <Button
        android:id="@+id/place_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/place_photo"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_symbol_normal"
        android:text="B9"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/first"
        android:textSize="42sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/place_more_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/place_description"
        android:layout_below="@id/separator" >

        <ImageButton
            android:id="@+id/place_more_info_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_more"
            android:contentDescription="@string/place_more_info_button" />
    </LinearLayout>

    <TextView
        android:id="@+id/place_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/separator"
        android:layout_toLeftOf="@id/place_more_info_layout"
        android:text="Tymczasowa Nazwa MiejscawObrÄ™bie Kampusu"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/first"
        android:textStyle="bold" />

    <TextView
        android:id="@id/place_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/place_name"
        android:text="Inne nazwy: lodex, tramwaj"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/forth" />

</RelativeLayout>