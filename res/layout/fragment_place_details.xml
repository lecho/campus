<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <RelativeLayout
            android:id="@+id/image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <ImageView
                android:id="@+id/place_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:contentDescription="@string/cd_place_photo"
                android:scaleType="centerCrop"
                android:src="@drawable/pic" />
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_below="@id/place_image"
                android:background="@color/maroon" />
            <Button
                android:id="@+id/place_symbol"
                style="@style/placeSymbol"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_alignBottom="@id/place_image"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/place_name"
                style="@style/placeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/place_image"
                android:layout_toLeftOf="@id/place_symbol" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>
</ScrollView>