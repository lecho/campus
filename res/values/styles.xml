<resources>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.campus_style">        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"> <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="placeSymbol">
        <item name="android:background">@drawable/symbol_selector</item>
        <item name="android:layout_marginBottom">-48dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/maroon</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="placeName">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/maroon</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="itemName">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/maroon</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="groupName" parent="@style/itemName">
        <item name="android:textStyle">bold</item>
    </style>
</resources>